generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expert {
  id          String   @id @default(cuid())
  name        String
  role        String
  expertQuote String   @db.Text
  photoUrl    String?
  linkedinUrl String?
  credentials String   @db.Text

  services    Service[]
  portfolioItems PortfolioItem[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Citation {
  id            String   @id @default(cuid())
  sourceTitle   String
  sourceUrl     String?
  contextClause String?  @db.Text

  services      Service[]
  portfolioItems PortfolioItem[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Service {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  features    String[]
  geoFacts    String   @db.Text
  icon        String
  statistics  Json?

  citations   Citation[]

  expert      Expert? @relation(fields: [expertId], references: [id])
  expertId    String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PortfolioItem {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  client      String?
  year        Int
  category    String
  location    String?
  description String
  imageUrl    String?
  challenge   String?
  solution    String?
  result      String?

  citations   Citation[]

  expert      Expert? @relation(fields: [expertId], references: [id])
  expertId    String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String?
  company   String?
  content   String
  rating    Int      @default(5)
  createdAt DateTime @default(now())
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
}
